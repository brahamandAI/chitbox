# Production Environment Variables for ChitBox
# Copy this to .env and update with your actual values

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://chitbox_user:your_secure_database_password_here@localhost:5432/chitbox

# JWT Secret (Generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# SMTP Configuration (Your custom SMTP server)
SMTP_PASSWORD=your_smtp_password_here

# AI Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key-here

# Domain Configuration
DOMAIN=chitbox.co

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Email Configuration
EMAIL_FROM_NAME=ChitBox
EMAIL_REPLY_TO=noreply@chartbox.co

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info
